{% assign sectionImage = section.settings.image | img_url: '2000x' %}
<section class="visionaries-hero">
    <div class="visionaries-hero-image">
        {% render 'simple-image' src:sectionImage %}
    </div>
    <div class="visionaries-hero-text">
        {% render 'visionaries' %}
    </div>
</section>

{% schema %}
{
  "name": "Visionaries Hero",
  "tag": "section",
  "settings": [
    {
      "id": "title_text",
      "type": "textarea",
      "label": "Text",
      "default":"Visionaries"
    },
    {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
    }
  ]
}
{% endschema %}