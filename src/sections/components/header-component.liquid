        <div class="header__date">
          <span>New York, NY</span>
          <span class="header__ny-time">9:32 AM</span>
        </div>
      </div>

      <div class="header__hamburger">
        <svg viewBox="0 0 100 80">
          <rect width="100" height="15"></rect>
          <rect y="30" width="100" height="15"></rect>
          <rect y="60" width="100" height="15"></rect>
        </svg>
      </div>
    </div>
  </div>
</header>
<div class="search-lightbox d-none">
    <div class="search-lightbox-inner">
      <div class="container">
        <div class="search-lightbox-header ">
          <a href="/" class="brand desktop-only" aria-label="Haerfest">
           <img src="//cdn.shopify.com/s/files/1/0511/7974/9539/products/SenecaAeroGreyMainLo7_42f81af7-aa19-46b5-93c7-a938cb705535.jpg?v=1634065061">

          </a>
          <h5 class="title mobile-only">Search</h5>
          <a href="#!" class="search-lightbox-close ui-close-search" aria-label="Search"></a>
        </div>
        <div class="search-lightbox-input-container">
          <form role="search" method="get" id="searchform" class="searchform" action="/search">
            <div class="search-wrap"><input type="text" aria-label="Search" placeholder="Search product or category" value="" autocomplete="off" data-placeholder="Search" name="q" id="bc-sf-search-box-0" class="ui-search ui-autocomplete-input bc-sf-search-box" data-search-box="#bc-sf-search-box-0"><i class="fa fa-search search-icon"></i><input type="submit" id="searchsubmit" value="Search"></div>
          </form>
        </div>
      </div>
    </div>
  </div>


{% if template == 'index' and section.settings.show-bar and section.settings.show-bar != '' %}
  <section class="announcement-bar">
    <div class="container">
      <p>{{ section.settings.bar-text }}</p>
      <button class="announcement-bar__close">
        <img src="https://cdn.shopify.com/s/files/1/0511/7974/9539/files/close.svg?v=1619559083" alt="Close button">
      </button>
    </div>
  </section>
{% endif %}

{% 
  render 'fullscreen-menu' 
  items:linklists[section.settings.menu].links
%}

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "submenu",
        "label": "Submenu"
      },
      {
        "id": "show-bar",
        "type": "checkbox",
        "label": "Show the announcement bar?",
        "default": false
      },
      {
        "id": "bar-text",
        "type": "text",
        "label": "Announcement bar text"
      }
    ],
    "blocks": [
      {
        "type": "images",
        "name": "Hover Images",
        "settings": [
          {
            "id": "img",
            "type": "image_picker",
            "label": "Choose image"
          },
          {
            "id": "alt",
            "type": "text",
            "label": "Image alt"
          }
        ]
      }
    ]
  }
  
{% endschema %}
