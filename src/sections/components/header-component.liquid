<header class="site-header header {% if template == 'index' or template.suffix == 'transparent-header' %} header--transparent {% endif %} {% if page.handle == "philosophy" %}black{% endif %}">
  <div class="">
    <div class="header__container">
      <nav class="header__nav">
        <ul class="header__nav-list">
          <li class="header__list-item header__list-item--has-submenu">
            <a href="/collections/all" aria-expanded="false" class="header__link-with-submenu">Shop</a>
            <div class="header__submenu">
              <ul class="header__submenu-list"> 
                {% for link in linklists[section.settings.submenu].links %}
                  <li class="header__submenu-list-item header__submenu-list-item--has-image"><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
                <li class="header__submenu-list-item"><a href="/collections/all">Shop All</a></li>
              </ul>
              <div class="header__submenu-img-wrapper">
                {% for image in section.blocks %}
                  <img class="header__submenu-img {% if forloop.first %}header__submenu-img--active{% endif %}" src="{{ image.settings.img | img_url: "300x" }}" alt="{{ image.settings.alt }}">
                {% endfor %}
              </div> 
            </div>
          </li>
          {% for link in linklists[section.settings.menu].links %}
            <li class="header__list-item"><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </nav>

      {% if template.suffix == "promo" or page.handle == "atlas-pant-landing" or page.handle == "vanta-pant" %}
        <div class="header__sticky-button">
          <button class="button button-default invert outline"><span>Shop Now</span></button>
        </div>
      {% endif %}

